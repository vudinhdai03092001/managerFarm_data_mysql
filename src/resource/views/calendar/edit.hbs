

{{> header}}
{{>navbar}}
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Lịch làm việc </h1>

    </div><!-- End Page Title -->
    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-12">
                <!-- Recent Activity -->
                <div class="card">
                    <div class="card-body" style="text-align: center; ">
                        <h5 class="card-title" id="currentYear"> </h5>
                        <div class="box-center" style="display:flex; ">
                            <div class="add-event-form" style="width:50%">
                                <h4>Chỉnh Sửa Lịch Làm Việc</h4>
                                <br>
                                <form id="event-form" method="POST" action="/lich/{{works._id}}?_method=PUT">
                                    <div class="form-group">
                                        <label class="event-title">Tiêu đề:</label>
                                        <input type="text" class="form-control" value="{{works.title}}" id="event-title" name="title" required>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label class="event-title">Ngày bắt đầu:</label>
                                        <input type="datetime-local" value="{{works.start}}" class="form-control" id="event-start" name="start"
                                            required>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label class="event-title">Ngày kết thúc</label>
                                        <input type="date" class="form-control" value="{{works.end}}" id="event-end" name="end" required>
                                    </div>
                                    <br>
                                    <button type="submit" class="btn btn-primary">Lưu Lại</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div><!-- End Recent Activity -->
                <!-- Budget Report -->
            </div><!-- End Right side columns -->
        </div>
    </section>
</main><!-- End #main -->